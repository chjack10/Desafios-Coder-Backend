html
  head
      title= "Agregar prod - PUG"
      link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css',
      rel='stylesheet',
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3',
      crossorigin='anonymous')
  body  

   div(class = "container")  
      h2(class = "text-center") Productos
      hr
      br
      div(class = 'container')
        form(method='post' action='/productos')
            input(
              class='form-control my-2'
              type='text'
              name='title'
              placeholder='nombre del producto'
              minlength='4'
              maxlength='100'
              required
            )
            input(
              class='form-control my-2'
              type='number'
              name='price'
              placeholder='precio'
              min='1'
              required
            )
            input(
              class='form-control my-2'
              type='text'
              name='thumbnail'
              placeholder='url al logo o foto del producto'
              minlength='4'
              maxlength='100'
              required
            ) 
            button(class='btn btn-primary mx-2') Agregar
            a(class='link-success' href='/productos') Ver productos